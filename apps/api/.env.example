# ATLAS API Configuration
# Copy this to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database
# =============================================================================
# Local development: SQLite
DATABASE_URL=sqlite+aiosqlite:///./atlas.db

# Production (Railway): PostgreSQL - set automatically by Railway
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# =============================================================================
# Security
# =============================================================================
# API token for /v1/* route authentication (required in production)
# Generate with: openssl rand -base64 32
API_TOKEN=

# CORS origins (comma-separated)
# Local dev: http://localhost:5173,http://localhost:3000
# Production: https://your-app.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# LLM Providers
# =============================================================================
# Ollama (local) - default provider
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI (cloud) - optional, for BALANCED/ACCURACY profiles
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Reliability Engine (locked per spec - do not change)
# =============================================================================
MAX_ATTEMPTS_PER_MODEL=2
MAX_MODELS_PER_REQUEST=3
