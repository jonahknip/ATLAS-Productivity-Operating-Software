{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://atlas.dev/schemas/intent.schema.json",
  "title": "ATLAS Intent",
  "description": "Intent envelope v2.1 - the contract between UI and core",
  "type": "object",
  "required": ["type", "confidence"],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "CAPTURE_TASKS",
        "PLAN_DAY",
        "PROCESS_MEETING_NOTES",
        "SEARCH_SUMMARIZE",
        "BUILD_WORKFLOW",
        "UNKNOWN"
      ],
      "description": "The classified intent type"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for the classification (0..1)"
    },
    "parameters": {
      "type": "object",
      "description": "Intent-specific parameters",
      "additionalProperties": true
    },
    "raw_entities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Extracted entities from user input"
    }
  },
  "additionalProperties": false
}
